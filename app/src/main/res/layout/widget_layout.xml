<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/bg"
    android:elevation="2dp"
    android:clipToPadding="false">

    <!-- Icon on the left side -->
<ImageView
android:id="@+id/widgetIcon"
android:layout_width="64dp"
    android:layout_height="64dp"
    android:src="@drawable/logo"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:contentDescription="Note Icon"
    android:scaleType="centerCrop"
    android:padding="4dp"
    android:background="@drawable/icon_background" />

    <!-- TextView for the note on the right side of the icon -->
<TextView
android:id="@+id/widgetNoteText"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_toEndOf="@id/widgetIcon"
android:layout_toStartOf="@id/widgetTime"
android:layout_centerVertical="true"
android:paddingStart="12dp"
    android:text="No note saved"
    android:textSize="16sp"
    android:textColor="@android:color/black"
    android:ellipsize="end"
    android:maxLines="1"
    android:textStyle="bold"
    android:letterSpacing="0.02" /> <!-- Minimal letter spacing for readability -->

    <!-- TextView for the time or date, aligned to the right -->
<TextView
android:id="@+id/widgetTime"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentEnd="true"
android:layout_centerVertical="true"
android:paddingEnd="12dp"
    android:text="10:30 AM"
    android:textSize="14sp"
    android:textColor="@android:color/white"
    android:textStyle="normal" />
    </RelativeLayout>
